<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First part is a gradient -->
    <item
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">

            <gradient
                android:angle="-90"
                android:endColor="#cc0891CF"
                android:startColor="#aa222222" />

        </shape>
    </item>
    <!-- Second part is plain color. Slightly transparent -->
    <item
        android:bottom="20sp"
        android:top="1sp">
        <shape android:shape="rectangle">
            <solid android:color="#100E577D" />
        </shape>

    </item>
</layer-list>