<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_20"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/dim_10"
        android:text="Select Payment Mode"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_15"
        android:gravity="center"
        android:text="Rs. 100"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dim_40"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/radio_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_30"
        android:checked="true"
        android:text="Pay Cash"
        android:textSize="@dimen/dim_20" />

    <RadioButton
        android:id="@+id/radio_paytm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_10"
        android:checked="false"
        android:text="Pay with Paytm"
        android:textSize="@dimen/dim_20" />

    <TextView
        android:id="@+id/txt_pay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_50"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/dim_10"
        android:text="Pay"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_20"
        android:textStyle="bold" />
</LinearLayout>