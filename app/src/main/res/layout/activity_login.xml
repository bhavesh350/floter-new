<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_15"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_30"
            android:padding="@dimen/dim_10"
            android:text="Sign-in"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_25" />


        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_50"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/dim_10"
            android:gravity="center_vertical"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="@dimen/dim_10"
            android:textSize="@dimen/dim_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_5"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_20"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/dim_12"
                android:text="LOGIN"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dim_18"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dim_15"
            android:text="One time password (OTP) will be sent to this number for verification"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_15"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>