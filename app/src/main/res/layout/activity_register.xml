<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        android:orientation="vertical">

        <include layout="@layout/toolbar"></include>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dim_20"
            android:src="@drawable/img_toolbar" />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:gravity="center"
            android:maxLength="11"
            android:padding="@dimen/dim_10"
            android:text="9999999999"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-42dp"
            android:gravity="center"
            android:padding="@dimen/dim_10"
            android:text="Change"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="First Name"
            android:inputType="text"
            android:padding="@dimen/dim_12"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="Last Name"
            android:inputType="text"
            android:padding="@dimen/dim_12"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/dim_12"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/txt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_terms"
        android:layout_marginBottom="@dimen/dim_15"
        android:layout_marginLeft="@dimen/dim_50"
        android:layout_marginRight="@dimen/dim_50"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:padding="@dimen/dim_12"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_marginLeft="@dimen/dim_50"
        android:layout_marginRight="@dimen/dim_50"
        android:paddingTop="@dimen/dim_10"
        android:paddingBottom="@dimen/dim_10"
        android:text="Terms &amp; Conditions"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_20"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/btn_fb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/dim_10"
            android:src="@drawable/ic_fb_login" />

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <ImageButton
            android:id="@+id/btn_google"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/dim_10"
            android:src="@drawable/ic_google_login" />
    </LinearLayout>
</RelativeLayout>
